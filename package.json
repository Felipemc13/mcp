{
  "name": "mcp-orchestrator-system",
  "version": "1.0.0",
  "description": "Sistema de MCP roiz com orquestração automática e controle rigoroso de etapas",
  "main": "src/orchestrator.js",
  "type": "module",
  "scripts": {
    "start": "node src/orchestrator.js",
    "dev": "node --watch src/orchestrator.js",
    "test": "node --test src/**/*.test.js",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "docs": "node scripts/generate-docs.js",
    "clean": "rimraf docs/output logs temp",
    "analyze": "node src/mcp-1-analysis.js",
    "validate": "node src/mcp-4-validator.js"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.12",
    "glob": "^10.3.10",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": ["mcp", "orchestrator", "automation", "testing", "documentation", "workflow", "validation"],
  "author": "Felipe Cavalcanti",
  "license": "MIT"
}
