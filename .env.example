# Configurações do Sistema MCP

# Configurações de desenvolvimento
NODE_ENV=development
DEBUG=true

# Configurações de logging
LOG_LEVEL=info
LOG_FILE=logs/system.log

# Configurações de timeout
EXECUTION_TIMEOUT=300000
TEST_TIMEOUT=60000

# Configurações de retry
MAX_RETRIES=3
RETRY_DELAY=2000

# Configurações de documentação
DOCS_PATH=./docs
AUTO_GENERATE_DOCS=true

# Configurações de backup
BACKUP_PATH=./backups
AUTO_BACKUP=true

# Diretório de trabalho (deixe vazio para usar o atual)
WORKSPACE_ROOT=

# Configurações de auto-fix
AUTO_FIX_ENABLED=true
AUTO_FIX_DEPENDENCIES=true
AUTO_FIX_SYNTAX=false
AUTO_FIX_PERMISSIONS=false

# Configurações de testes
TEST_COVERAGE_THRESHOLD=70
TEST_AUTO_RUN=true

# Configurações de validação
VALIDATION_SCORE_THRESHOLD=75
VALIDATION_STRICT_MODE=true
VALIDATION_AUTO_APPROVE=false

# Configurações de performance
PERFORMANCE_MONITORING=true
PERFORMANCE_MAX_EXECUTION_TIME=1800

# Configurações de notificação
NOTIFY_ON_ERROR=true
NOTIFY_ON_SUCCESS=false
NOTIFY_ON_COMPLETION=true

# Configurações de debug
DEBUG_MODE=false
DEBUG_SAVE_LOGS=true
DEBUG_VERBOSE_OUTPUT=false
